<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;netcoreapp2.0;netcoreapp2.1;netcoreapp3.0;netcoreapp3.1</TargetFrameworks>
        <LangVersion>8</LangVersion>
    </PropertyGroup>
    
    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DefineConstants>TRACE;NETCORE</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DefineConstants>TRACE;NETCORE</DefineConstants>
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="SciterCore.Binaries" Version="4.4.5.2" />
      <PackageReference Include="SciterCore.PackFolder" Version="0.1.257" />
      <PackageReference Include="System.Drawing.Common" Version="5.0.0" />
    </ItemGroup>
    
    <!-- LibConsole packaging -->
    <PropertyGroup>
        <TaskFolder>$(MSBuildThisFileDirectory)..\..\scripts\</TaskFolder>
        <PackSourceFolder>$(MSBuildThisFileDirectory)..\..\Shared\SciterCore.Shared\LibConsole</PackSourceFolder>
        <PackOutputFile>$(ProjectDir)sciter.build\LibConsole.bin</PackOutputFile>
        <TaskAssembly Condition="$([MSBuild]::IsOsPlatform(Windows))">packfolder.exe</TaskAssembly>
        <TaskAssembly Condition="$([MSBuild]::IsOsPlatform(OSX))">packfolder</TaskAssembly>
        <TaskAssembly Condition="$([MSBuild]::IsOsPlatform(Linux))">packfolder</TaskAssembly>
    </PropertyGroup>
    
    <Target Name="SciterPreBuild" BeforeTargets="PreBuildEvent">
        <MakeDir Directories="$(ProjectDir)sciter.build" />
        <Exec Command="$(TaskFolder)$(TaskAssembly) &quot;$(PackSourceFolder)&quot; &quot;$(PackOutputFile)&quot; -binary" />
    </Target>

    <Target Name="SciterEmbedLocal" BeforeTargets="PrepareForBuild">
        <ItemGroup>
            <EmbeddedResource Include="$(ProjectDir)sciter.build\LibConsole.bin">
                <LogicalName>LibConsole</LogicalName>
            </EmbeddedResource>
        </ItemGroup>
    </Target>

    <Import Project="..\..\Shared\SciterCore.Shared\SciterCore.Shared.projitems" Label="Shared" />
</Project>
